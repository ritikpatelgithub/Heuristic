<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#7A0BC0"


    tools:context=".MainActivity">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="680dp"
            android:backgroundTint="#1E1353"
            android:elevation="20dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp">


                        <TextView
                            android:id="@+id/heuristic_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/aclonica"
                            android:text="HEURISTIC"
                            android:textColor="@color/white"
                            android:textSize="48dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.504"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/guideline4"
                            tools:ignore="HardcodedText,MissingConstraints,SpUsage" />


                        <TextView
                            android:id="@+id/email_textviewlogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:text="E-mail ID"
                            android:textColor="@color/white"
                            android:textSize="21dp"
                            app:layout_constraintStart_toStartOf="@+id/guideline2"
                            app:layout_constraintTop_toBottomOf="@+id/heuristic_textview"
                            tools:ignore="HardcodedText,MissingConstraints,SpUsage" />

                        <EditText
                            android:id="@+id/email_edittext"
                            android:layout_width="340dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/rectangle"
                            android:ems="10"
                            android:inputType="textEmailAddress"
                            android:minHeight="48dp"
                            android:paddingLeft="12dp"
                            android:paddingBottom="4dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="21dp"
                            app:layout_constraintStart_toStartOf="@+id/guideline2"
                            app:layout_constraintTop_toBottomOf="@+id/email_textviewlogin"
                            tools:ignore="HardcodedText,LabelFor,MissingConstraints,SpUsage,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                        <TextView
                            android:id="@+id/pass_textview"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:text="Pasword"
                            android:textColor="@color/white"
                            android:textSize="25dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/guideline2"
                            app:layout_constraintTop_toBottomOf="@+id/email_edittext"
                            tools:ignore="HardcodedText,MissingConstraints,SpUsage" />

                        <EditText
                            android:id="@+id/pass_edittext"
                            android:layout_width="340dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/rectangle"
                            android:ems="10"
                            android:inputType="textPassword"
                            android:paddingLeft="12dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="21dp"
                            app:layout_constraintEnd_toStartOf="@+id/guideline3"
                            app:layout_constraintStart_toStartOf="@+id/guideline2"
                            app:layout_constraintTop_toBottomOf="@+id/pass_textview"
                            tools:ignore="Autofill,HardcodedText,LabelFor,MissingConstraints,SpUsage,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                        <TextView
                            android:id="@+id/forgot_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="8dp"
                            android:text="Forgot Pasword ?"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            app:layout_constraintEnd_toStartOf="@+id/guideline3"
                            app:layout_constraintHorizontal_bias="0.995"
                            app:layout_constraintStart_toStartOf="@+id/guideline2"
                            app:layout_constraintTop_toBottomOf="@+id/pass_edittext"
                            tools:ignore="HardcodedText,MissingConstraints,SpUsage" />

                        <Button
                            android:id="@+id/btnLogin"
                            android:layout_width="276dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/lgnbtn"


                            android:paddingBottom="12dp"
                            android:text="Login"
                            app:layout_constraintBottom_toTopOf="@+id/btnCreateAcountS"
                            app:layout_constraintEnd_toStartOf="@+id/guideline3"
                            app:layout_constraintHorizontal_bias="0.515"
                            app:layout_constraintStart_toStartOf="@+id/guideline2"
                            tools:ignore="HardcodedText,MissingConstraints" />

                        <Button
                            android:id="@+id/btnCreateAcountS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/lgnbtn"
                            android:paddingBottom="12dp"
                            android:text="Create account for Student"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toTopOf="@+id/btnCreateAcountT"
                            app:layout_constraintEnd_toStartOf="@+id/guideline3"
                            app:layout_constraintHorizontal_bias="0.545"
                            app:layout_constraintStart_toStartOf="@+id/guideline2"
                            tools:ignore="HardcodedText,MissingConstraints" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_begin="27dp" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="25dp"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintGuide_begin="386dp" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_begin="30dp" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_begin="664dp" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintLayout"
                            android:layout_width="170dp"
                            android:layout_height="133dp"
                            android:layout_marginBottom="28dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/guideline3"
                            app:layout_constraintHorizontal_bias="0.574"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:ignore="MissingConstraints">

                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:text="---OR---"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    app:layout_constraintBottom_toTopOf="@+id/textView10"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    tools:ignore="HardcodedText,MissingConstraints,SpUsage" />

                                <TextView
                                    android:id="@+id/textView10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sign in with"
                                    android:textColor="@color/white"
                                    android:textSize="17dp"
                                    app:layout_constraintBottom_toTopOf="@+id/instagram"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    tools:ignore="HardcodedText,MissingConstraints,SpUsage" />

                                <ImageButton
                                    android:id="@+id/instagram"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:backgroundTint="#1E1353"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/twiter"
                                    app:layout_constraintHorizontal_bias="0.545"
                                    app:layout_constraintStart_toEndOf="@+id/google"
                                    app:srcCompat="@drawable/ic_icons8_instagram"
                                    tools:ignore="ContentDescription,MissingConstraints,SpeakableTextPresentCheck" />

                                <ImageButton
                                    android:id="@+id/twiter"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:backgroundTint="#1E1353"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:srcCompat="@drawable/ic_twitter"
                                    tools:ignore="ContentDescription,MissingConstraints,SpeakableTextPresentCheck,ImageContrastCheck" />

                                <ImageButton
                                    android:id="@+id/google"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:backgroundTint="#1E1353"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:srcCompat="@drawable/ic_icons8_google"
                                    tools:ignore="ContentDescription,MissingConstraints,SpeakableTextPresentCheck" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <Button
                            android:id="@+id/btnCreateAcountT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:background="@drawable/lgnbtn"
                            android:paddingBottom="12dp"
                            android:text="CREATE ACCOUNT FOR TEACHER"
                            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                            app:layout_constraintEnd_toStartOf="@+id/guideline3"
                            app:layout_constraintHorizontal_bias="0.054"
                            app:layout_constraintStart_toStartOf="@+id/guideline2" />


                </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/welcome_txt"
            android:layout_width="375dp"
            android:layout_height="47dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="40dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="WELCOME"
            android:textColor="@color/white"
            android:textSize="26dp"
            app:layout_constraintBottom_toTopOf="@+id/cardView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,MissingConstraints,SpUsage" />

        <TextView
            android:id="@+id/enlightners_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Powerd by Enlighterns"
            android:textColor="@color/white"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2" />

</androidx.constraintlayout.widget.ConstraintLayout>